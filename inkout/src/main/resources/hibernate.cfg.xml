<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://postgres:5432/inkedlin</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hbm2ddl.auto">create-drop</property>
<!--        <property name="hbm2ddl.auto">update</property>-->

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="hibernate.enable_lazy_load_no_trans">true</property>

        <mapping class="ir.doodmood.inkout.models.GeoLocation"/>
        <mapping class="ir.doodmood.inkout.models.Certificate"/>
        <mapping class="ir.doodmood.inkout.models.Passion"/>
        <mapping class="ir.doodmood.inkout.models.Skill"/>
        <mapping class="ir.doodmood.inkout.models.JobPosition"/>
        <mapping class="ir.doodmood.inkout.models.Institute"/>
        <mapping class="ir.doodmood.inkout.models.User"/>
        <mapping class="ir.doodmood.inkout.models.ContactInfo"/>
        <mapping class="ir.doodmood.inkout.models.Education"/>
        <mapping class="ir.doodmood.inkout.models.Post"/>
        <mapping class="ir.doodmood.inkout.models.Comment"/>
    </session-factory>
</hibernate-configuration>